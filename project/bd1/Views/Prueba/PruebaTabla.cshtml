@model IEnumerable<bd1.Models.Persona>
@{
    ViewBag.Title = "PruebaTabla";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>PruebaTabla</h2>

<body>
    <div class="jumbotron">
        <h1>Bienvenido/a a PRUEBA</h1>

        <table class="table table-bordered table-hover" style="border-spacing:5px;">
            <thead>
                <tr>
                    <th>
                        Nombre
                    </th>
                    <th>
                        Apellido
                    </th>
                    <th>
                        Cedula
                    </th>
                </tr>
            </thead>

            @foreach (var persona in Model)
            {
                <tr>
                    <td>
                        <p>@persona.nombre</p>
                    </td>
                    <td>
                        <p>@persona.apellido</p>
                    </td>
                    <td>
                        <p>@persona.ci</p>
                    </td>
                </tr>

            }
                
        </table>
    </div>

</body>

