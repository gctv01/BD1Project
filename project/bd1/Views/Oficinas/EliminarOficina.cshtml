@model bd1.Models.Oficina

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("MenuSuperior");
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>OFICINAS</b></p>
</div>
<div class="jumbotron">
    <h2>Eliminando Oficina</h2>
    <br />
    @using (Html.BeginForm("EliminarOficina", "Oficinas",
    FormMethod.Post))
    {
        <p>
            @Html.TextBoxFor(m => m.cod, new { @class = "form-control", placeholder = "Codigo de la Oficina" })
        </p>
        <div>
            <input type="submit" value="Eliminar" />
            <input type="button" value="Regresar" onclick="location.href='@Url.Action("IndexOficina", "Oficinas")'" />
        </div>
    }
</div>
