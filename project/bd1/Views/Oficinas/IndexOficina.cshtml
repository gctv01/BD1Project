@model IEnumerable<bd1.Models.Oficina>

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("MenuSuperior");
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>OFICINAS</b></p>
</div>

@using (Html.BeginForm("Index", "Home",
           FormMethod.Post))
{
    @Html.Action("TBOficina");
    <input type="submit" value="Buscar" />
    <input type="submit" value="Eliminar Oficina" />
    <input type="submit" value="Actualizar Oficina" />
    <input type="button" style="float:right" value="Agregar Oficina" onclick="location.href='@Url.Action("AgregarOficina", "Oficinas")'" />
}
<br />
<div class="jumbotron">
    <table class="table table-bordered table-hover" style="border-spacing:5px;">
        <thead style="background:lightgray">
            <tr>
                <th>
                    Codigo
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Correo
                </th>
                <th>
                    Capacidad
                </th>
                <th>
                    Almacenamiento
                </th>
            </tr>
        </thead>

        @foreach (var oficina in Model)
        {
            <tr>
                <td>
                    <p>@oficina.cod</p>
                </td>
                <td>
                    <p>@oficina.nombre</p>
                </td>
                <td>
                    <p>@oficina.correo</p>
                </td>
                <td>
                    <p>@oficina.capacidad</p>
                </td>
                <td>
                    <p>@oficina.almacenamiento</p>
                </td>
            </tr>
        }

    </table>
</div>


