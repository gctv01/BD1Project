@model bd1.Models.Oficina

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("MenuSuperior");
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>OFICINAS</b></p>
</div>
<div class="jumbotron">
    <h2>Agregando Oficina</h2>
    <br />
        @using (Html.BeginForm("AgregarOficina", "Oficinas",
        FormMethod.Post))
        {
            <p>
                @Html.TextBoxFor(m => m.nombre, new { @class = "form-control", placeholder = "Nombre de la Oficina" })
            </p>
            <p>
                @Html.TextBoxFor(model => model.capacidad, new { @class = "form-control", placeholder = "Capacidad" })
            </p>
            <p>
                @Html.TextBoxFor(m => m.correo, new { @class = "form-control", placeholder = "Correo" })
            </p>
            <p>
                @Html.TextBoxFor(model => model.almacenamiento, new { @class = "form-control", placeholder = "Almacenamiento" })
            </p>
            <div>
                <input type="submit" value="Agregar" />
                <input type="button" value="Regresar" onclick="location.href='@Url.Action("IndexOficina", "Oficinas")'" />
            </div>
        }
    </div>





