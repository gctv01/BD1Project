@model bd1.Models.Cliente

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("MenuSuperior");
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>CLIENTES</b></p>
</div>
<div class="jumbotron">
    <h2>Modificando Cliente</h2>
    <br />
    @using (Html.BeginForm("ModificarCliente", "Cliente",
    FormMethod.Post))
    {
        <p>
            @Html.EditorFor(m => m.CI, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
        </p>
        <p>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </p>
        <p>
            @Html.TextBoxFor(model => model.Apellido, new { @class = "form-control" })
        </p>
        <p>
            <h5>Fecha de Nacimiento:</h5>
            @Html.TextBoxFor(model => model.fechaNac, new { @class = "form-control", @type = "date" })
        </p>
        <p>
            @Html.TextBoxFor(model => model.telefono, new { @class = "form-control", placeholder = "Telefono" })
        </p>
        <p>
            <select name="estCivil" id="estCivil">
                <option value="Soltero">
                    Soltero/a
                </option>
                <option value="Casado">
                    Casado/a
                </option>
                <option value="Divorciado">
                    Divorciado/a
                </option>
                <option value="Viudo">
                    Viudo/a
                </option>

            </select>
        </p>
        <p>
            @Html.TextBoxFor(model => model.Trabajo, new { @class = "form-control" })
        </p>
        @Html.Action("LugarDD");
        <div>
            <input type="submit" value="Modificar" />
            <input type="button" value="Regresar" onclick="location.href='@Url.Action("IndexCliente", "Cliente")'" />
        </div>
    }
</div>






