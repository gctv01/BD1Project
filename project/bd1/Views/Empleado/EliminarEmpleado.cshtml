@model bd1.Models.Empleado

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("MenuSuperior", new { viewba = ViewBag.name });
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>EMPLEADOS</b></p>
</div>
<div class="jumbotron">
    <h2>Eliminando Empleado</h2>
    <br />
    @using (Html.BeginForm("EliminarEmpleado", "Empleado",
    FormMethod.Post))
    {
        <p>
            @Html.TextBoxFor(m => m.CI, new { @class = "form-control", placeholder = "Cedula del cliente" })
        </p>
        <div>
            <input type="submit" value="Eliminar" />
            <input type="button" value="Regresar" onclick="location.href='@Url.Action("IndexEmpleado", "Empleado")'" />
        </div>
    }
</div>


