@model IEnumerable<bd1.Models.Avion>

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px">
        <b>
            Listado de aviones y sus características.
        </b>
    </p>
</div>

<br />
<div class="jumbotron">
    <div>
        <input type="button" value="Regresar" onclick="location.href='@Url.Action("IndexReporte", "Reporte")'" />
    </div>
    <br />
    <table class="table table-bordered table-hover" style="border-spacing:5px;">
        <thead style="background:lightgray">
            <tr>
                <th>
                    Placa
                </th>
                <th>
                    Modelo
                </th>
                <th>
                    Capacidad
                </th>
                <th>
                    Peso(Kg)
                </th>
                <th>
                    Fecha Creacion
                </th>
                <th>
                    Longitud(m)
                </th>
                <th>
                    Peso vacio(Kg)
                </th>              
            </tr>
        </thead>
        @foreach (var envio in Model)
        {
            <tr>
                <td>
                    <p>@envio.placa</p>
                </td>
                <td>
                    <p>@envio.modelo</p>
                </td>
                <td>
                    <p>@envio.capacidad</p>
                </td>
                <td>
                    <p>@envio.peso</p>
                </td>
                <td>
                    <p>@envio.fechaCreacion</p>
                </td>
                <td>
                    <p>@envio.longitud</p>
                </td>
                <td>
                    <p>@envio.pesoVacio</p>
                </td>
            </tr>
        }
    </table>
    <table class="table table-bordered table-hover" style="border-spacing:5px;">
        <thead style="background:lightgray">
            <tr>
                <th>
                    Placa
                </th>
                <th>
                    Envergadura(m)
                </th>
                <th>
                    Peso max(Kg)
                </th>
                <th>
                    Altura(m)
                </th>
                <th>
                    Ancho cabina(m3)
                </th>
                <th>
                    Capacidad Combustible(Lt)
                </th>
                <th>
                    Carrera Despegue(m)
                </th>
                <th>
                    Diametro Fuselaje(m)
                </th>
            </tr>
        </thead>
        @foreach (var envio in Model)
        {
            <tr>
                <td>
                    <p>@envio.placa</p>
                </td>
                <td>
                    <p>@envio.envergadura</p>
                </td>
                <td>
                    <p>@envio.pesoMax</p>
                </td>
                <td>
                    <p>@envio.altura</p>
                </td>
                 <td>
                    <p>@envio.anchoCabina</p>
                </td>
                <td>
                    <p>@envio.capacidadCombustible</p>
                </td>
                <td>
                    <p>@envio.carreraDespegue</p>
                </td>
                <td>
                    <p>@envio.diametroFuselaje</p>
                </td>
            </tr>
        }
    </table>
</div>

