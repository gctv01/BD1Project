@model IEnumerable<bd1.Models.Vehiculo>

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>Qué medio de transporte es el más utilizado</b></p>
</div>

<br />
<div class="jumbotron">
    <div>
        <input type="button" value="Regresar" onclick="location.href='@Url.Action("IndexReporte", "Reporte")'" />
    </div>
    <br />
    <table class="table table-bordered table-hover" style="border-spacing:5px;">
        <thead style="background:lightgray">
            <tr>
                <th>
                    Tipo
                </th>
                <th>
                    Porcentaje de uso
                </th>
            </tr>
        </thead>
        @foreach (var envio in Model)
        {
            <tr>
                <td width="50%">
                    <p>@envio.tipo</p>
                </td>
                <td>
                    <p>@envio.duracion%</p>
                </td>
            </tr>
        }
    </table>
</div>




