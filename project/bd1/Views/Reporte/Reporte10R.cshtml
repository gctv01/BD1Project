@model IEnumerable<bd1.Models.Usuario>

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>AUDITORIA DEL SISTEMA</b></p>
</div>

<br />
<div class="jumbotron">
    <div>
        <input type="button" value="Regresar" onclick="location.href='@Url.Action("IndexReporte", "Reporte")'" />
    </div>
    <br />
    <table class="table table-bordered table-hover" style="border-spacing:5px;">
        <thead style="background:lightgray">
            <tr>
                <th>
                    Usuario
                </th>
                <th>
                    Rol
                </th>
                <th>
                    Accion
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Fecha
                </th>
            </tr>
        </thead>
        @foreach (var usuario in Model)
        {
            <tr>
                <td>
                    <p>@usuario.username</p>
                </td>
                <td>
                    <p>@usuario.Rol</p>
                </td>
                <td>
                    <p>@usuario.accion</p>
                </td>
                <td>
                    <p>@usuario.descripcion</p>
                </td>
                <td>
                    <p>@usuario.fecha</p>
                </td>
            </tr>
        }
    </table>
</div>





