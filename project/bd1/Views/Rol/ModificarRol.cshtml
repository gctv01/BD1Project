@model bd1.Models.Rol

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("MenuSuperior", new { viewba = ViewBag.name });
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>ROLES</b></p>
</div>
<div class="jumbotron">
    <h2>Modificando Rol</h2>
    <br />
    @using (Html.BeginForm("ModificarRol", "Rol",
    FormMethod.Post))
    {
        <p>
            @Html.EditorFor(m => m.COD, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
        </p>
        <p>
            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
        </p>
        <div>
            <input type="submit" value="Modificar" />
            <input type="button" value="Regresar" onclick="location.href='@Url.Action("IndexRol", "Rol")'" />
        </div>
    }
</div>





