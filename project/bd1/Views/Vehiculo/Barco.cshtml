@model IEnumerable<bd1.Models.Barco>

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("MenuSuperior");
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>VEHICULOS - BARCOS</b></p>
</div>

@using (Html.BeginForm("BuscarOficina", "Oficinas",
           FormMethod.Post))
{
    @*@Html.Action("TBOficina");*@
    <input type="button" style="margin-right:1%" value="Terrestres"
           onclick="location.href='@Url.Action("IndexVehiculo", "Vehiculo")'" />
    <input type="button" style="margin-right:1%" value="Barcos"
           onclick="location.href='@Url.Action("IndexBarco", "Vehiculo")'" />
    <input type="button" style="margin-right:1%" value="Aviones"
           onclick="location.href='@Url.Action("IndexAvion", "Vehiculo")'" />
    <input type="button" style="float:right" value="Eliminar Vehiculo"
           onclick="location.href='@Url.Action("EliminarBarco", "Vehiculo")'" />
    <input type="button" style="float:right; margin-right:1%" value="Agregar Vehiculo"
           onclick="location.href='@Url.Action("AgregarBarco", "Vehiculo")'" />
}
<br />
<div class="jumbotron">
    <table class="table table-bordered table-hover" style="border-spacing:5px;">
        <thead style="background:lightgray">
            <tr>
                <th>
                    Placa
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Capacidad(m2)
                </th>
                <th>
                    Peso(Kg)
                </th>
                <th>
                    Fecha de Creacion
                </th>
            </tr>
        </thead>

        @foreach (var terrestre in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@terrestre.placa, "ModificarBarco", "Vehiculo", new { id = @terrestre.placa }, null)
                </td>
                <td>
                    <p>@terrestre.nombre</p>
                </td>
                <td>
                    <p>@terrestre.capacidad</p>
                </td>
                <td>
                    <p>@terrestre.peso</p>
                </td>
                <td>
                    <p>@terrestre.fechaCreacion</p>
                </td>
            </tr>
        }

    </table>

</div>




