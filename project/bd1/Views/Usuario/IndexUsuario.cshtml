@model IEnumerable<bd1.Models.Usuario>

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("MenuSuperior");
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>USUARIOS</b></p>
</div>

@using (Html.BeginForm("BuscarUsuario", "Usuario",
           FormMethod.Post))
{
    @*@Html.Action("TBOficina");*@
    <input type="submit" value="Buscar" />
}
<br />
<div class="jumbotron">
    <table class="table table-bordered table-hover" style="border-spacing:5px;">
        <thead style="background:lightgray">
            <tr>
                <th>
                    Codigo
                </th>
                <th>
                    Nombre
                </th>
            </tr>
        </thead>

        @foreach (var oficina in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(@oficina.username.ToString(), "ModificarUsuario", "Usuario", new { id = @oficina.username }, null)
                    @*<a style="font-size:160%" href="@Url.Action("ModificarOficina", "Oficinas")">@oficina.cod</a>*@
                </td>
                @*<td>
                    <p>@oficina.Nombre</p>
                </td>*@
            </tr>
        }

    </table>
</div>




