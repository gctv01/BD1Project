@model bd1.Models.Usuario

@{
    ViewBag.Title = "Homempleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@Html.Action("MenuSuperior");
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>USUARIOS</b></p>
</div>
<div class="jumbotron">
    <h2>Modificando Usuario</h2>
    <br />
    @using (Html.BeginForm("ModificarUsuario", "Usuario",
    FormMethod.Post))
    {
        <p>
            @Html.EditorFor(m => m.cod, new { htmlAttributes = new { @readonly = "readonly", @class = "form-control" } })
        </p>
        <p>
            @Html.EditorFor(m => m.username, new { htmlAttributes = new { @class = "form-control" } })
        </p>
        <p>
            @Html.PasswordFor(m => m.contrasena, new { @class = "form-control", placeholder = "Indique nueva contrasena"})
        </p>
        @Html.Action("RolDD");
        <div>
            <input type="submit" value="Modificar" />
            <input type="button" value="Regresar" onclick="location.href='@Url.Action("IndexUsuario", "Usuario")'" />
        </div>
    }
</div>





