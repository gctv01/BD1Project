@model bd1.Models.ModeloLogIn
@{
    ViewBag.Title = "DetallesOficina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<ul class="hola">
    <li>@Html.ActionLink("Home", "Homempleado", "Home")</li>
    <li>@Html.ActionLink("Envíos", "MenuEnvios", "Home")</li>
    <li>@Html.ActionLink("Vehículos", "Contact", "Home")</li>
    <li>@Html.ActionLink("Pagos", "Contact", "Home")</li>
    <li>@Html.ActionLink("Admin", "Contact", "Home")</li>
</ul>
<h2>DetallesOficina</h2>
@using (Html.BeginForm("Index", "Home",
           FormMethod.Post))
{

    <p>
        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", placeholder = "Num Guía" })
    </p>
    <input type="submit" value="Buscar" />
    <input type="button" value="Regresar" onclick="location.href='@Url.Action("EditarOficina", "Home")'" />
}
<br />
<style>
    table, th, td {
        border: 1px solid black;
    }

    table {
        width: 100%;
    }

    th {
        height: 50px;
        background-color: lightgray;
    }
</style>
<br />
<div>
    <table>
        <tr style="padding: 10px">
            <th><b>Envío</b></th>
            <th><b>Num de guía</b></th>
            <th><b>Destino</b></th>
            <th><b>¿Llegó a Destino?</b></th>
        </tr>
    </table>
</div>
<br />