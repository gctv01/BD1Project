@model bd1.Models.ModeloLogIn
@{
    ViewBag.Title = "Pantallavehiculosadmin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<ul class="hola">
    <li>@Html.ActionLink("Home", "HomeAdmin", "Home")</li>
    <li>@Html.ActionLink("Envíos", "MenuEnvios", "Home")</li>
    <li>@Html.ActionLink("Vehículos", "Pantallavehiculosadmin", "Home")</li>
    <li>@Html.ActionLink("Pagos", "Contact", "Home")</li>
    <li>@Html.ActionLink("Admin", "Menuadmin", "Home")</li>
</ul>
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>Estatus de vehículos</b><br /><a>@Html.ActionLink("Agregar Vehículo", "agregarvehiculoadmin", "Home")</a></p>
</div>
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; margin-right: 60%;"><b>Búsqueda por número de placa</b></p>
</div>
@using (Html.BeginForm("Index", "Home",
           FormMethod.Post))
{
    <p>
        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", placeholder = "Num Placa" })
    </p>
    <input type="submit" value="Buscar" />
}
<br />
<style>
    table, th, td {
        border: 1px solid black;
    }

