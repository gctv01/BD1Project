@model bd1.Models.ModeloLogIn
@{
    ViewBag.Title = "Homecliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Home Cliente</h2>
<ul class="hola">
    <li>@Html.ActionLink("Home", "Homecliente", "Home")</li>
    <li>@Html.ActionLink("Envíos", "MenuEnvios", "Home")</li>
    <li>@Html.ActionLink("LVIP", "Contact", "Home")</li>

</ul>
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; font-size: 20px"><b>Bienvenido (nombre de usuario). Envíos recientes</b></p>
</div>
<div>
    <p style="background-color: lightgray; color: black; padding: 15px; margin-right: 75%;">Búsqueda por número de guía</p>
</div>
@using (Html.BeginForm("Index", "Home",
           FormMethod.Post))
{
    <p>
        @Html.TextBoxFor(m => m.Usuario, new { @class = "form-control", placeholder = "Num Guía" })
    </p>
    <input type="submit" value="Buscar" />
}
<style>
    table, th, td {
        border: 1px solid black;
    }

    table {
        width: 100%;
    }

    th {
        height: 50px;
        background-color: lightgray;
    }
</style>
<div>
    <table>
        <tr style="padding: 10px">
            <th><b>Envío</b></th>
            <th><b>Num de guía</b></th>
            <th><b>Destino</b></th>
            <th><b>¿llegó a Destino?</b></th>
        </tr>
    </table>
</div>
